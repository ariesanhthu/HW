@model IEnumerable<PostNewFeed>

@foreach (var item in Model)
{
    <div class=" d-flex justify-content-center flex-row flex-wrap p-0 mt-3" >
        <div class="card rounded shadow" id="@item.Id" style="width: 100%">
            <!--Thông tin đầu bài Post-->
            <div class="card-header">
                <div class="d-flex flex-row align-items-baseline m-0">
                    <div class="align-self-center">
                        <img src="~/media/NewsFeed/noimg.png" class="card-ic ic-type-binding" style="width:3rem"/>
                    </div>
                    <div class="d-flex flex-column mt-0 ml-2">
                        <label class="card-title m-0 p-0">@item.Author</label>
                        <label class="font-weight-light m-0 p-0">@item.OnUpdated</label>
                    </div>
                    <div class="ml-auto p-2">
                        <a class="btn btn-secondary text-decoration-none"
                            asp-controller="postnewfeed" asp-action="detail" asp-route-Id="@item.Id"
                            target="_blank">Đọc thêm</a>
                    </div>
                </div>
            </div>
            <!--Content-->
            <div class="card-body p-3">
                    <label class="text-center">@item.Title</label>
                          
                        @if(@item.Image != "noimg.png")
                        {
                        <div class="card-img d-flex justify-content-around">
                                <img class="rounded img-fluid" style="max-width: 100% !important" src="~/media/NewsFeed/@item.Image"/>
                        </div>
                        }
            </div> 

            <!--Tương tác-->
                <div class="card-footer">
                        <div class="d-flex flex-row align-items-baseline">
                            <div class="mr-auto p-2">
                                <img id="icsave-@item.Id" src="~/ic/ic_unlove.png" width="20"> 
                                <label>10</label>
                            </div>
                            <div onclick=SavePost("/PostSaved/SavePost?id="+@item.Id.ToString())
                                  class="p-2">
                                <img id="icsave-@item.Id" src="~/ic/ic-unsave.png" style="max-width: 50% !important"> 
                            </div>

                        </div>

                </div> 
        </div>
    </div>
}
