@model Room

@{
    ViewData["Title"] = "Thêm lớp";
}

<h1>Thêm lớp mới</h1>

<div class="row">
    <div class="col-md-10">
        <form asp-action="create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label" asp-for="@Model.Name"></label>
                <input type="text" asp-for="@Model.Name" class="form-control" />
            </div>
             <div class="form-group">
                <label class="control-label" asp-for="@Model.Description"></label>
                <input type="text" asp-for="@Model.Description" class="form-control" />
            </div>

            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
