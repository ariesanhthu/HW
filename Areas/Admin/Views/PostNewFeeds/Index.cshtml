@model IEnumerable<PostNewFeed>

@{
    ViewData["Title"] = "Post";
}

<div class="offset-9 col-3">
    <a asp-action="Upsert" asp-controller="PostNewFeeds" class="btn btn-info form-control text-white">Tạo bài viết </a>
</div>
<div class="col-12 border p-3">
        <table id = "DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Thời gian</th>
                    <th>Tiêu đề</th>
                    <th>Nội dung</th>
                    <th>Môn học</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Time
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @Html.Raw(@item.Content)
                </td>
                <td>
                    @item.SubjectArtical.Name
                </td>
                <td>
                    <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                             <a class='btn btn-danger text-white' style='cursor:pointer; width:70px;'
                            onclick=Delete("/admin/PostNewFeeds/Delete?id="+@item.Id.ToString())>
                            Delete
                        </a>
                </td>
            </tr>
        }
            </tbody>
        </table>
</div>

@section Scripts{
    <script src = "~/js/DataTableSite.js"></script>
}
