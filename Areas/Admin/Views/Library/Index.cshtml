@model IEnumerable<HW.Models.LibraryArticalClass>

@{
    ViewData["Title"] = "Thư viện";
}

<br/>

<h1>Thư viện</h1>

<div class="col-3">
    <a asp-action="Upsert" asp-controller="Library" class="btn btn-info form-control text-white">Thêm bài</a>
</div>
<br/>
<div class="col-12 border p-3">
        <table id = "DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Tên bài</th>
                    <th>Chủ đề</th>
                    <th>Nguồn</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.SubjectArtical.Name
                        </td>
                         <td>
                            @item.Url
                        </td>
                        <td>
                            <a asp-action="Upsert" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Detail" asp-route-id="@item.Id">Details</a> |
                                     <a class="text-danger" style='cursor:pointer; width:70px;'
                                    onclick=Delete("/admin/Classroom/Delete?id="+@item.Id.ToString())>
                                    Delete
                                </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>