@model IEnumerable<Room>

@{
    ViewData["Title"] = "Lớp học";
}

<div class="offset-9 col-3">
    <a asp-action="Create" asp-controller="Classroom" class="btn btn-info form-control text-white">Thêm lớp</a>
</div>
<div class="col-12 border p-3">
        <table id = "DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Tên lớp</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RoomId">Edit</a> |
                    <a asp-action="Detail" asp-route-id="@item.RoomId">Details</a> |
                             <a class="text-danger" style='cursor:pointer; width:70px;'
                            onclick=Delete("/admin/Classroom/Delete?id="+@item.RoomId.ToString())>
                            Delete
                        </a>
                </td>
            </tr>
        }
            </tbody>
        </table>
</div>
