@model Category

<h4>Thêm mới</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" asp-items="@ViewBag.SubjectId" class="form-control">
                    <option value="0">Chọn một chủ đề</option>
                </select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
             </div>

             <!--Button-->
            <div class="form-group row">
                <div class="col-3 offset-3">
                    <button class="btn btn-primary form-control" type="submit">
                        @(Model.Id!=0 ? "Update" : "Create") 
                    </button>
                </div>
                <div class="col-3">
                    <a asp-action="Index" class="btn btn-success form-control">Back
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}
